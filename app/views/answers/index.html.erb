<% provide(:title, "All Questions & Answers") %>

<div class="container admin_page">
  <h1>All Questions & Answers</h1>

  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Question id</th>
          <th>Question</th>
          <th>Answer</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @answers.each do |answer| %>
          <tr>
            <td><%= answer.id unless answer.id.nil? %></td>
            <td><%= answer.question unless answer.question.nil? %></td>
            <td><%= answer.answer unless answer.answer.nil? %></td>
            <td>
              <%= link_to "Delete", answer, method: :delete, data: { confirm: "You sure?" } %>
            </td>
        <% end %>
        
      </tbody>
    </table>
  </div>

  <h2> 
    <%= link_to "Create New Q&A entry", new_answer_path %> 
  </h2>
</div>