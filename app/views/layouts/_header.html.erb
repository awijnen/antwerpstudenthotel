  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "ASH WHAT IS IT?", root_url, class: "navbar-brand", id: "logo" %>
    </div>
    <div class="collapse navbar-collapse">
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if !signed_in? %>
            <li><%= link_to "ROOMS", "#home_rooms_pane" %></li>
            <li><%= link_to "QUESTIONS & ANSWERS", "#home_questions_pane" %></li>
            <li><%= link_to "PARTNERS", "#home_partners_pane" %></li>
