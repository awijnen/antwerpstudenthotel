<%= form_for(@contact_request) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :surname %>
  <%= f.text_field :surname %>      

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :phone %>
  <%= f.phone_field :phone %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :comment %>
  <%= f.text_area :comment %>                                          

  <%= f.submit "Send", class: "btn btn-large btn-primary" %>
<% end %>