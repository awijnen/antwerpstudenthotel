<% provide(:title, 'New Reservation') %>

<div class="container admin_page">
  <h1>New Reservation</h1>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(@reservation) do |f| %> 
        <%= render 'fields', f: f %>
        <%= f.submit "Submit Reservation", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>